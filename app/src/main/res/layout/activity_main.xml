<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10sp"
    android:layout_marginVertical="20sp"
    android:orientation="vertical"
    android:overScrollMode="ifContentScrolls"
    tools:context=".MainActivity">
    <ScrollView
        android:id="@+id/scrollView_Section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linear_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
<!--            17/7/2021-->
            <TextView
                android:id="@+id/section_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/section_1"
                android:textColor="@color/red_500"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="5sp"
                android:textAlignment="center"
                android:background="@color/black"
                />
                <TextView
                    android:id="@+id/title"
                    android:text="@string/title_page"
                    android:textColor="@color/purple_500"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/oldname"
                    android:text="@string/title_name"
                    android:textColor="@color/teal_700"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText1old"
                    android:hint="@string/date_picker"
                    android:textColorHint="@color/red_500"
                    android:layout_gravity="center_horizontal"
                    android:inputType="datetime"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_submit"
                    android:onClick="clickFx"
                    />
                <Button
                    android:id="@+id/oldbutton2"
                    android:background="@drawable/mybutton"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textSize="18pt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="clickFx"
                    />
<!--            -->

            <TextView
                android:id="@+id/section_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/section_2"
                android:textColor="@color/red_500"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginVertical="5sp"
                android:textAlignment="center"
                android:background="@color/black"
                />
<!--            OnClick 3 แบบ-->
            <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickButton"
            android:text="exp1_ New York" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickButton"
            android:text="exp1_ Manila"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickButton"
            android:text="exp1_ Taipei"
            android:textAllCaps="false"

            />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickButton"
            android:text="exp1_ Catch Error"
            android:textAllCaps="false" />

        // แบบที่ 2

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="exp2_ Manila"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="exp2_ Taipei"
            android:textAllCaps="false" />

        // แบบที่ 3

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickButton"
            android:text="exp3_ New York" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickButton"
            android:text="exp3_ Manila"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickButton"
            android:text="exp3_ Taipei"
            android:textAllCaps="false" />
<!--            -->
        </LinearLayout>
    </ScrollView>



</LinearLayout>